<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="@color/HeidenelkenrotOriginal"
    >



    <RelativeLayout
        android:id="@+id/questions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:layout_margin="2dp"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Fragen werden geladen ..."
            android:id="@+id/question"
            android:layout_marginTop="0dp"
            
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/border_of_question"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:gravity="center"
            android:layout_margin="0dp"
        />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/current_question"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"


        />

        <ProgressBar
            style="android:attr/progressBarStyleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Antwort wird geladen ..."
            android:id="@+id/option_a"
            android:textColor="@color/Black"
            android:background="@color/White"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:gravity="center"

            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Antwort wird geladen ..."
            android:id="@+id/option_b"
            android:textColor="@color/Black"
            android:background="@color/White"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Antwort wird geladen ..."
            android:id="@+id/option_c"
            android:textColor="@color/Black"
            android:background="@color/White"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Antwort wird geladen ..."
            android:id="@+id/option_d"
            android:textColor="@color/Black"
            android:background="@color/White"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:gravity="center"
            />

    </RelativeLayout>







</LinearLayout>